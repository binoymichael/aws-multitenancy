<div class="page-header">
  <h3>Assigments</h3>
</div>
<table class="table">
  <tr>
    <th>Student Id</th>
    <th>Assignment Code</td>
    <th>Type</th>
    <th>Actions</th>
    <th>Grade</th>
  </tr>
  <% @assignments.each do |assignment| %>
    <tr>
      <td><%= assignment.student_id %></td>
      <td><%= assignment.description %></td>
      <td><%= assignment.assignment_type.titleize %></td>
      <td><%= link_to('View', assignment) %></td>
      <td><%= assignment.grades.description %></td>
    </tr>
  <% end %>
</table>

